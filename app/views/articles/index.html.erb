<h1>Listing all articles</h1>
<p>
    <%= link_to "Create new article", new_article_path %>
</p>


<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
    </tr>
    
    
    
    <% @articles.each do |l| %>
    <tr>
        <td><%= l.title %></td>
        <td><%= l.description %></td>
        <td><%= link_to "Edit", edit_article_path(l) %></td>
        <td><%= link_to "Show", article_path(l) %></td>
        <td><%= link_to "Delete", article_path(l), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
    <% end %>
</table>